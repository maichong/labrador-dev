<view class="list-item flex-row items-center todo {{className}}">
  <icon class="todo-icon" type="{{icon}}" size="20" color="#999" catchtap="handleFinish"/>
  <view class="block flex todo-title {{className}}-title"> {{title}} </view>
  <view class="btn btn-small {{finished?'btn-gray-hollow':'btn-danger'}}" catchtap="handleRemove">删除</view>
</view>
